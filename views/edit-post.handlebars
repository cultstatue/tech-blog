<article>
    <div class="container-fluid m-3">
  <a href="/dashboard"> &larr; Back to dashboard</a>

  <h1>Edit Post</h1>
</div>
    <form class="edit-post-form m-3">
        <div class="form-group">
            <input name="post-title" type="text" value="{{post.title}}" class="form-control">
        </div>

         <div class="form-group">
    
            <textarea class="form-control" name="post-content" rows="10">{{post.post_text}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save Post</button>
        <button type="submit" class="btn btn-danger delete-post-btn">Delete Post</button>
    </form>


    <form class="comment-form">
        <div class="form-group m-3">
            <div class="form-group">
            <textarea class="form-control" name="comment-body" rows="3"></textarea>
        </div>
   <button type="submit" class="btn btn-primary mb-2">Add Comment</button>
</form> 
{{> comments post.comments}}
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
<section>
    {{#each posts as |post|}}
    <div class="card m-3">
    <h5 class="card-header">{{post.title}}</h5>
    <div class="card-body">
        <h5 class="card-title">{{post.created_at}} by {{post.user.username}}</h5>
        <p class="card-text">{{post.post_text}}</p>
        <a href="/post/{{post.id}}"class="btn btn-primary">{{post.comments.length}} comment(s)</a>
    </div>
    </div>
    {{/each}}
</section
<section class="m-3">
    <h1>Make a new post</h1>
    <form class="new-post-form">
        <div class="form-group mt-3">

            <input type="text" class="form-control" name="post-title" placeholder="Title">

        </div>

         <div class="form-group">
    
            <textarea class="form-control" name="post-content" rows="10"  placeholder="Content here"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>

    </form>

</section>

{{#if posts.length}}
<section class="m-3">

    <h1>Your posts</h1>
     {{#each posts as |post|}}
    <div class="card mt-3">
    <h5 class="card-header">{{post.title}}</h5>
    <div class="card-body">
        <h6 class="card-title">{{format_date post.created_at}} by {{post.user.username}}</h6>
        <a href="/post/{{post.id}}"class="btn btn-primary">{{post.comments.length}} {{format_plural "comment" comments.length}}</a>
        <a href="/dashboard/edit/{{post.id}}" class="btn btn-danger edit-link">Edit post</a>
    </div>
    </div>
    {{/each}}

</section>
{{/if}}

<script src="/javascript/add-post.js"></script>